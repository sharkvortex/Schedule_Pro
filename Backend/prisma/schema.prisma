generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  member
  admin
}

model User {
  id        Int      @id @default(autoincrement())
  studentId String   @unique
  firstName String
  lastName  String
  username  String   @unique
  email     String   @unique
  role      Role  @default(user)
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Period {
  MORNING
  AFTERNOON
  EVENING
}

enum Study_day {
  MON
  TUE
  WED
  THU
  FRI
  SAT
  SUN
}
model Subjects {
  id           Int       @id @default(autoincrement())
  subject_id   String    @unique
  subject_name String
  teacher_name String
  study_day    Study_day
  time_start   String  
  time_end     String  
  period       Period
  room         String
  createAt     DateTime  @default(now())
  updateAt     DateTime  @updatedAt  @default(now())
}
